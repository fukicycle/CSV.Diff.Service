<Window x:Class="CSV.Diff.Service.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV.Diff.Service.Wpf"
        xmlns:vm="clr-namespace:CSV.Diff.Service.Wpf.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontSize="17"
        Title="CSV比較ツールv1"
        Height="650"
        Width="1200">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Text="変更前のファイルと変更後のファイルを選択してください。（CSVファイル）*"/>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button
                Content="変更前ファイルを選択"
                Command="{Binding PreviousFileBrowseCommand}"
                Width="160"
                Margin="4"/>
            <TextBlock Text="{Binding PreviousFile.ShortName}"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <Button
                Content="変更後ファイルを選択"
                Command="{Binding AfterFileBrowseCommand}"
                Width="160"
                Margin="4"/>
            <TextBlock Text="{Binding AfterFile.ShortName}"
                       VerticalAlignment="Center"/>
        </StackPanel>
        <DataGrid Grid.Row="2"
                  Grid.Column="0"
                  Margin="4"
                  IsReadOnly="True"
                  ItemsSource="{Binding PreviousData}"
                  CanUserSortColumns="False"
                  AutoGenerateColumns="True"/>
        <DataGrid Grid.Row="2"
                  Grid.Column="1"
                  Margin="4"
                  IsReadOnly="True"
                  ItemsSource="{Binding AfterData}"
                  CanUserSortColumns="False"
                  AutoGenerateColumns="True"/>
        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Text="比較する基準となる列を選択してください。*"/>
        <ComboBox Grid.Row="4"
                  Width="160"
                  Margin="4"
                  ItemsSource="{Binding ColumnList}"
                  HorizontalAlignment="Left"
                  Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="5"
                   Grid.ColumnSpan="2"
                   FontWeight="Bold"
                   Text="比較したい列を選択してください。指定しない場合すべての列が対象となります。"/>
        <Grid Grid.Row="6"
              Margin="4"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="CSV列"/>
            <ListBox Grid.Row="1"
                     Grid.Column="0"
                     ItemsSource="{Binding ColumnList}"
                     SelectionMode="Extended"/>
            <Button Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="4"
                    Content="&gt;"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="比較対象列"/>
            <ListBox Grid.Row="1"
                     Grid.Column="2"
                     ItemsSource="{Binding TargetColumnList}"/>
        </Grid>
        <Button Grid.Row="7"
                Grid.ColumnSpan="2"
                Content="実行"
                Margin="4"
                Width="160"/>
    </Grid>
</Window>
