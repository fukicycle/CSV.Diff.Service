<Window x:Class="CSV.Diff.Service.Wpf.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV.Diff.Service.Wpf"
        xmlns:vm="clr-namespace:CSV.Diff.Service.Wpf.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontSize="17"
        Title="CSV比較ツールv1"
        Height="850"
        Width="1350">
    <Window.DataContext>
        <vm:ResultWindowViewModel/>
    </Window.DataContext>
    <Grid Margin="4">
        <TabControl Grid.Column="0">
            <TabItem Header="追加されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="True"/>
                    <StackPanel Margin="4"
                                Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="&lt;"/>
                        <TextBlock Width="16"/>
                        <Button Content="&gt;"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="更新されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Row="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="True"/>
                    <StackPanel Margin="4"
                                Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="&lt;"/>
                        <TextBlock Width="16"/>
                        <Button Content="&gt;"/>
                    </StackPanel>
                    <DataGrid Grid.Column="1"
                              Grid.Row="0"
                              Grid.RowSpan="2"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="カラム名"/>
                            <DataGridTextColumn Header="変更前"/>
                            <DataGridTextColumn Header="変更後"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="削除されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="True"/>
                    <StackPanel Margin="4"
                                Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="&lt;"/>
                        <TextBlock Width="16"/>
                        <Button Content="&gt;"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
