<Window x:Class="CSV.Diff.Service.Wpf.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV.Diff.Service.Wpf"
        xmlns:vm="clr-namespace:CSV.Diff.Service.Wpf.ViewModels"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontSize="17"
        Title="CSV比較ツールv1"
        Height="850"
        Width="1350">
    <Grid Margin="4">
        <TabControl Grid.Column="0">
            <TabItem Header="追加されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Added}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="基準となる列の値"
                                                Binding="{Binding BaseValue}"/>
                            <DataGridTextColumn Header="生値"
                                                Binding="{Binding RawContentString}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Margin="4"
                          Grid.Row="1">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                            <Button Content="&lt;"
                                    Width="90"
                                    Command="{Binding PrevCommand}"
                                    CommandParameter="1"/>
                            <TextBlock Width="16"/>
                            <Button Content="&gt;"
                                    Width="90"
                                    Command="{Binding NextCommand}"
                                    CommandParameter="1"/>
                        </StackPanel>
                        <TextBlock Text="{Binding AddStatusText.Value}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <Button Grid.Row="2"
                            Content="CSVにエクスポート"
                            Command="{Binding ExportAddCommand}"
                            HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
            <TabItem Header="更新されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Row="0"
                              Grid.Column="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              SelectedItem="{Binding SelectedResultContent}"
                              ItemsSource="{Binding Updated}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="基準となる列の値"
                                                Binding="{Binding BaseValue}"/>
                            <DataGridTextColumn Header="生値"
                                                Binding="{Binding RawContentString}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <GridSplitter Grid.Column="1"
                                  HorizontalAlignment="Stretch"/>
                    <Grid Grid.Row="1"
                          Grid.Column="0"
                          Margin="4">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                            <Button Content="&lt;"
                                    Width="90"
                                    Command="{Binding PrevCommand}"
                                    CommandParameter="2"/>
                            <TextBlock Width="16"/>
                            <Button Content="&gt;"
                                    Width="90"
                                    Command="{Binding NextCommand}"
                                    CommandParameter="2"/>
                        </StackPanel>
                        <TextBlock Text="{Binding UpdateStatusText.Value}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <DataGrid Grid.Column="2"
                              Grid.Row="0"
                              Grid.RowSpan="2"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Changes}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="カラム名"
                                                Binding="{Binding Column}"/>
                            <DataGridTextColumn Header="変更前"
                                                Binding="{Binding Prev}"/>
                            <DataGridTextColumn Header="変更後"
                                                Binding="{Binding After}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Grid.Row="2"
                            Grid.ColumnSpan="3"
                            Content="CSVにエクスポート"
                            Command="{Binding ExportUpdateCommand}"
                            HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
            <TabItem Header="削除されたもの">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="0"
                              IsReadOnly="True"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Deleted}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="基準となる列の値"
                                                Binding="{Binding BaseValue}"/>
                            <DataGridTextColumn Header="生値"
                                                Binding="{Binding RawContentString}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Margin="4"
                          Grid.Row="1">
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                            <Button Content="&lt;"
                                    Width="90"
                                    Command="{Binding PrevCommand}"
                                    CommandParameter="3"/>
                            <TextBlock Width="16"/>
                            <Button Content="&gt;"
                                    Width="90"
                                    Command="{Binding NextCommand}"
                                    CommandParameter="3"/>
                        </StackPanel>
                        <TextBlock Text="{Binding DeleteStatusText.Value}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <Button Grid.Row="2"
                            Content="CSVにエクスポート"
                            Command="{Binding ExportDeleteCommand}"
                            HorizontalAlignment="Right"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
